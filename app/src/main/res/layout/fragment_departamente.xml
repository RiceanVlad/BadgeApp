<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backdepartamente">

    <TextView
        android:id="@+id/textViewAlegeDepartament2"
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:layout_marginTop="64dp"
        android:text="Choose department"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerAlegeDepartament2"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="@+id/textViewAlegeDepartament2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewAlegeDepartament2"
        app:layout_constraintTop_toBottomOf="@+id/textViewAlegeDepartament2" />

    <TextView
        android:id="@+id/textViewAlegeEchipa2"
        android:layout_width="232dp"
        android:layout_height="41dp"
        android:layout_marginTop="60dp"
        android:text="Choose team"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerAlegeDepartament2" />

    <Spinner
        android:id="@+id/spinnerAlegeEchipa2"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="@+id/textViewAlegeEchipa2"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/textViewAlegeEchipa2"
        app:layout_constraintTop_toBottomOf="@+id/textViewAlegeEchipa2" />

    <Button
        android:id="@+id/buttonAlegeEchipaSiDep2"
        android:layout_width="304dp"
        android:layout_height="71dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/round_bg"
        android:text="Choose department and team"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Department password"
        android:inputType="textPassword"
        android:padding="8dp"
        android:paddingStart="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/spinnerAlegeEchipa2"
        app:layout_constraintStart_toStartOf="@+id/spinnerAlegeEchipa2"
        app:layout_constraintTop_toBottomOf="@+id/spinnerAlegeEchipa2" />
</androidx.constraintlayout.widget.ConstraintLayout>